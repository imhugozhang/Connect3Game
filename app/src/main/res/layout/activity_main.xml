<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#009C27B0" android:hapticFeedbackEnabled="true">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Great App"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/helloRobTextView"
            app:layout_constraintVertical_bias="0.050000012"
            style="@android:style/Widget.Material.Light.TextView.SpinnerItem" android:alpha="1"
            android:background="#4FFF3B" app:fontFamily="sans-serif"
            android:textColor="#000000"
            android:textSize="36sp" android:padding="10dp"/>

</android.support.constraint.ConstraintLayout>